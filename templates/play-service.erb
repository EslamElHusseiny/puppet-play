#!/bin/sh
#
### BEGIN INIT INFO
# Provides:          play app
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: play web application
# Description: Controls web application written with Play! framework 
### END INIT INFO

NAME=<%= name %>
DESC='<%= name %>'
PROJ_HOME=<%= path %>

PLAY_HOME=<%= play_home %>

case "$1" in
  start)
        echo -n "Starting $DESC"
		$PLAY_HOME/play dependencies
		$PLAY_HOME/play start $PROJ_HOME ${frameworkArgument} ${javaOptions}
        ;;
  stop)
        echo -n "Stopping $DESC"
		$PLAY_HOME/play stop $PROJ_HOME
        ;;
  restart)
        echo -n "Restarting $DESC"
        $PLAY_HOME/play restart $PROJ_HOME ${frameworkArgument} ${javaOptions}
        ;;
  *)
        echo "Usage: service $NAME {start|stop|restart}"
        exit 1
esac

exit 0
